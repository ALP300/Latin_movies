            margin-bottom: 1.5rem;
            line-height: 1.7;
            font-size: 1.05rem;
        }

        .promo-details {
            display: flex;
            flex-direction: column;
            gap: 0.8rem;
            margin-bottom: 1.5rem;
        }

        .promo-detail {
            display: flex;
            align-items: center;
            gap: 0.8rem;
            color: rgba(245, 245, 245, 0.7);
            font-size: 0.95rem;
        }

        .promo-detail-icon {
            font-size: 1.2rem;
        }

        .promo-price {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--primary-gold);
            margin-bottom: 1rem;
            font-family: 'Bebas Neue', sans-serif;
            letter-spacing: 1px;
        }

