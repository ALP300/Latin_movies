        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary-gold: #FFD700;
            --secondary-red: #E50914;
            --dark-bg: #0a0a0a;
            --dark-card: #1a1a1a;
            --light-text: #f5f5f5;
            --accent-green: #10B981;
        }

        body {
            font-family: 'Inter', sans-serif;
            color: var(--light-text);
            background-color: var(--dark-bg);
            line-height: 1.6;
        }

        header {
            background: linear-gradient(180deg, rgba(10, 10, 10, 0.98), rgba(10, 10, 10, 0.85));
            backdrop-filter: blur(20px);
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.7);
            border-bottom: 1px solid rgba(255, 215, 0, 0.1);
        }

        nav {
            max-width: 1400px;
            margin: 0 auto;
            padding: 1.2rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            font-family: 'Bebas Neue', sans-serif;
            font-size: 2.5rem;
            background: linear-gradient(135deg, var(--primary-gold), var(--secondary-red));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            letter-spacing: 2px;
            text-decoration: none;
        }

        .nav-links {
            display: flex;
            gap: 2.5rem;
            list-style: none;
            align-items: center;
        }

        .nav-links a {
            color: var(--light-text);
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-size: 0.95rem;
        }

        .nav-links a:hover {
            color: var(--primary-gold);
        }

        .btn-tickets {
            background: linear-gradient(135deg, var(--secondary-red), #b20710);
            padding: 0.7rem 1.8rem;
            border-radius: 25px;
            font-weight: 700;
            box-shadow: 0 5px 20px rgba(229, 9, 20, 0.4);
        }

        .page-header {
            margin-top: 80px;
            padding: 4rem 2rem 2rem;
            text-align: center;
            background: linear-gradient(180deg, rgba(229, 9, 20, 0.2), transparent);
        }

        .page-title {
            font-family: 'Bebas Neue', sans-serif;
            font-size: 4.5rem;
            background: linear-gradient(135deg, var(--primary-gold), var(--secondary-red));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            letter-spacing: 3px;
            margin-bottom: 1rem;
        }

        .page-subtitle {
            font-size: 1.4rem;
            color: rgba(245, 245, 245, 0.7);
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 3rem 2rem;
        }

        .promo-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 3rem;
            margin-bottom: 4rem;
        }

        .promo-card {
            background: linear-gradient(135deg, rgba(26, 26, 26, 0.9), rgba(229, 9, 20, 0.1));
            border-radius: 20px;
            overflow: hidden;
            border: 2px solid rgba(255, 215, 0, 0.3);
            transition: all 0.4s ease;
            position: relative;
        }

        .promo-card::before {
            content: '';
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            background: linear-gradient(135deg, var(--primary-gold), var(--secondary-red));
            border-radius: 20px;
            z-index: -1;
            opacity: 0;
            transition: opacity 0.4s ease;
        }

        .promo-card:hover::before {
            opacity: 1;
        }

        .promo-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 25px 50px rgba(255, 215, 0, 0.4);
        }

        .promo-badge {
            position: absolute;
            top: 1.5rem;
            right: 1.5rem;
            background: var(--secondary-red);
            color: var(--light-text);
            padding: 0.5rem 1.2rem;
            border-radius: 25px;
            font-weight: 700;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            box-shadow: 0 5px 15px rgba(229, 9, 20, 0.5);
        }

        .promo-badge.new {
            background: var(--accent-green);
        }

        .promo-image {
            width: 100%;
            height: 250px;
            object-fit: cover;
        }

        .promo-content {
            padding: 2rem;
        }

        .promo-title {
            font-family: 'Bebas Neue', sans-serif;
            font-size: 2.2rem;
            color: var(--primary-gold);
            margin-bottom: 1rem;
