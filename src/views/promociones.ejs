            font-size: 1.5rem;
            color: rgba(245, 245, 245, 0.4);
            text-decoration: line-through;
            margin-right: 1rem;
        }

        .promo-btn {
            width: 100%;
            padding: 1.1rem;
            background: linear-gradient(135deg, var(--secondary-red), #b20710);
            color: var(--light-text);
            border: none;
            border-radius: 12px;
            font-weight: 700;
            font-size: 1.1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .promo-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(229, 9, 20, 0.6);
        }

        .special-section {
